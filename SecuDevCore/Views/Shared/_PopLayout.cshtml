@using SecuDev.Helper;
@{
    string nowDate = Utility.GetNowDate();
}
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Jquery 3.7.1 -->
    <script src="/lib/Jquery/jquery-3.7.1.min.js"></script>

    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="/lib/Bootstrap/bootstrap.min.css" />
    <script src="~/lib/Bootstrap/bootstrap.min.js"></script>

    <!-- Chart.js 4.4.1 -->
    <script src="/lib/ChartJS/chart.min.js"></script>

    <!-- Chart.js datalabel (tooltip-data) -->
    <script src="/lib/ChartJS/chartjs-plugin-datalabels.js"></script>

    <!-- FontAwsome 6.7 -->
    <link href="/lib/FontAwesome/css/fontawesome.min.css" rel="stylesheet" />
    <link href="/lib/FontAwesome/css/all.css" rel="stylesheet" />

    <!-- PagedList -->
    <link href="/lib/PagedList/PagedList.css" rel="stylesheet" type="text/css" />

    <!-- Custom CSS -->
    <link href="/lib/common.css?@Utility.DateTimeFormat(nowDate, 3)" rel="stylesheet" />

    <!-- Custom JS -->
    <script src="/lib/common.js?@Utility.DateTimeFormat(nowDate, 3)"></script>

</head>
<body>

    <nav class="navbar navbar-expand-sm bg-dark navbar-dark fixed-top shadow">
        <ul class="navbar-nav">
            <li class="nav-item active">
                <a class="nav-link" href="/LatestUpadate">부대별 최신업데이트 현황</a>
            </li>
        </ul>
    </nav>

    <div class="container body-content">

        @RenderBody()

    </div>

    <nav class="navbar navbar-expand-sm bg-dark navbar-dark fixed-bottom" style="box-shadow: 0 0 10px rgba(0,0,0,.5) !important; ">
        <ul class="navbar-nav">
            <li class="nav-item">
                <small class="text-white">
                    Copyright &copy; @Utility.DateTimeFormat(nowDate, 5) Corporation. All Rights Reserved.
                </small>
            </li>
        </ul>
    </nav>
</body>
</html>
